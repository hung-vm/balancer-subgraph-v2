{
  "name": "balancer",
  "version": "0.1.0",
  "scripts": {
    "create": "graph create balancer-labs/balancer-v2 --node https://api.thegraph.com/deploy/",
    "codegen": "yarn generate-manifests && graph codegen --output-dir src/types/",
    "build": "graph build",
    "lint": "eslint --max-warnings 0 . --ext .ts",
    "test": "jest ./test/*.test.ts",
    "deploy": "graph deploy balancer-labs/balancer-v2 --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy:local": "graph deploy balancer-labs/balancer-v2 subgraph.dockerParity.yaml --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",

    "create:defiverse": "graph create balancer-labs/defiverse --node http://13.212.69.154:8020",
    "deploy:defiverse": "graph deploy balancer-labs/defiverse subgraph.defiverse.yaml --ipfs http://13.212.69.154:5001 --node http://13.212.69.154:8020",
    "remove:defiverse": "graph remove balancer-labs/defiverse --node http://13.212.69.154:8020",

    "create:defiverse_testnet": "graph create balancer-labs/defiverse-testnet-v2 --node http://13.250.65.26:8020",
    "deploy:defiverse_testnet": "graph deploy balancer-labs/defiverse-testnet-v2 subgraph.defiverse_testnet.yaml  --ipfs http://13.250.65.26:5001 --node http://13.250.65.26:8020",
    "remove:defiverse_testnet": "graph remove balancer-labs/defiverse-testnet-v2 --node http://13.250.65.26:8020",    

    "create:oasys_testnet": "graph create balancer-labs/oasys-testnet --node http://13.212.249.120:18020",
    "deploy:oasys_testnet": "graph deploy balancer-labs/oasys-testnet subgraph.oasys_testnet.yaml  --ipfs http://13.212.249.120:5001 --node http://13.212.249.120:18020",
    "remove:oasys_testnet": "graph remove balancer-labs/oasys-testnet --node http://13.212.249.120:18020",    

    "generate-assets:oasys": "ts-node ./scripts/generate-assets oasys",
    "generate-manifests:oasys": "ts-node ./scripts/generate-manifests oasys",

    "create:oasys": "graph create balancer-labs/oasys --node http://18.139.226.108:18020",
    "deploy:oasys": "graph deploy balancer-labs/oasys subgraph.oasys.yaml  --ipfs http://18.139.226.108:5001 --node http://18.139.226.108:18020",
    "remove:oasys": "graph remove balancer-labs/oasys --node http://18.139.226.108:18020",    
    
    "import-abis": "ts-node ./scripts/update-abis.ts",
    "generate-assets": "ts-node ./scripts/generate-assets",
    "generate-manifests": "ts-node ./scripts/generate-manifests",
    "update-addresses": "ts-node ./scripts/update-addresses-subgraph.ts",
    "update-addresses:goerli": "yarn update-addresses goerli",
    "update-addresses:local": "yarn update-addresses dockerParity",
    "update-addresses:defiverse": "yarn update-addresses defiverse",
    "update-addresses:defiverse_testnet": "yarn update-addresses defiverse_testnet",
    "update-addresses:oasys_testnet": "yarn update-addresses oasys_testnet",
    "update-addresses:oasys": "yarn update-addresses oasys",
    "sync": "yarn import-abis && yarn update-addresses:defiverse && yarn codegen && yarn build",
    "sync:defiverse_testnet": "yarn import-abis && yarn update-addresses:defiverse_testnet && yarn codegen && yarn build",
    "sync:oasys_testnet": "yarn import-abis && yarn update-addresses:oasys_testnet && yarn codegen && yarn build",
    "sync:oasys": "yarn import-abis && yarn update-addresses:oasys && yarn codegen && yarn build",
    "sync:local": "yarn import-abis && yarn update-addresses dockerParity && yarn codegen && yarn build"
  },
  "devDependencies": {
    "@apollo/client": "^3.3.9",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@graphprotocol/graph-cli": "0.52.0",
    "@graphprotocol/graph-ts": "0.31.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "apollo-client": "^2.6.10",
    "assemblyscript": "0.19.10",
    "babel-jest": "^26.6.3",
    "eslint": "^7.9.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.7",
    "jest": "^26.6.3",
    "js-yaml": "^4.0.0",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.17.5",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "global": "^4.4.0",
    "node-fetch": "^2.6.7"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "preset": "ts-jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        },
        "@babel/preset-typescript"
      ]
    ]
  }
}
